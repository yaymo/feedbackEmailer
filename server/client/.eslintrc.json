{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "env": {
        "browser": true,
        "mongo": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "arrowFunctions": true,
            "jsx": true,
            "classes": true,
            "destructuring": true,
            "defaultParams": true,
            "spread": true
            
        }
    },
    "rules": {
        "no-trailing-spaces": 1,
        "comma-dangle": 0,
        "react/jsx-filename-extension": 0,
        "jsx-a11y/click-events-have-key-events": 0,
        "no-extra-bind": 1,
        "prefer-arrow-callback": 1,
        "no-extra-parens": 1,
        "no-extra-semi": 1
    }
}